{
  "compilerOptions": {
    "lib": [
      "es2015",
      "DOM"
    ],
    "strict": true,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  }
}